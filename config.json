{
    "detection": {       
        "scale_factor": 1.5,
        "min_neighbors": 5,
        "skip_frames": 10,
        "output": {
            "directory": "./recognition/faces",
            "format": "png",
            "min_width": 64,
            "min_height": 64
        },
        "classifiers": [
            "./recognition/classifiers/haarcascade_frontalface_default.xml",
            "./recognition/classifiers/haarcascade_profileface.xml",
            "./recognition/classifiers/lbpcascade_profileface.xml",
            "./recognition/classifiers/lbpcascade_frontalface_improved.xml"
        ]
    },
    "recognition": {
        "min_confidence": 50
    }
}
